model User {
  id           Int       @id @default(autoincrement())
  email        String    @unique
  name         String
  passwordHash String
  isAdmin      Boolean   @default(false)
  createdAt    DateTime  @default(now())
  orders       Order[]
  cart         CartItem[]
}

model Product {
  id          Int          @id @default(autoincrement())
  slug        String       @unique
  name        String
  description String
  image       String
  priceCents  Int
  inStock     Int          @default(0)
  category    String       @default("Accessories")
  createdAt   DateTime     @default(now())
  orderItems  OrderItem[]  // ðŸ‘ˆ added reverse relation
  cartItems   CartItem[]   // ðŸ‘ˆ added reverse relation
}

model Order {
  id              Int         @id @default(autoincrement())
  user            User        @relation(fields: [userId], references: [id])
  userId          Int
  totalCents      Int
  status          String      @default("PENDING")
  createdAt       DateTime    @default(now())
  items           OrderItem[]
  fullName        String
  email           String
  phone           String
  addressLine1    String
  addressLine2    String?
  suburb          String
  state           String
  postcode        String
  deliveryNotes   String?
  stairs          Boolean     @default(false)
  preferredWindow String?
  paymentId       String?
}

model OrderItem {
  id         Int      @id @default(autoincrement())
  order      Order    @relation(fields: [orderId], references: [id])
  orderId    Int
  product    Product  @relation(fields: [productId], references: [id])
  productId  Int
  qty        Int
  priceCents Int
}

model CartItem {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  product   Product  @relation(fields: [productId], references: [id])
  productId Int
  qty       Int      @default(1)
  @@unique([userId, productId])
}
